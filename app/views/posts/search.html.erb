<h1>Posts Search</h1>

<%= form_for search_path, method: :get do |f| %>
  <p>
  <%= f.label "Search for" %>
  <%= text_field_tag :q, params[:q] %>
  <%= submit_tag "Go", name: nil %>
  </p>
<% end %>

<ul>
  <%= @posts.each do |post| %>
    <li>
      <h3>
        <%= link_to post.body, controller: "posts", action: "show", id: post.id%>
      </h3>
    </li>
  <% end %>
</ul>
