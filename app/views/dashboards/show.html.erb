<%#= react_component("App", prerender: true) %>

<h1>Dashboards</h1>

<%= react_component("PostModal", prerender: true) %>

<%= post_form_for(TextPost) do |form| %>
  <%= react_component("TextPost", props: @post, prerender: true) %>
  <%#= form.text_field :body, placeholder: "Post Here!", required: true %>
<% end %>

<%= post_form_for(ProjectPost) do |form| %>
  <%#= react_component("ProjectPost", props: @post, prerender: true) %>
  <%= form.text_field :title, placeholder: "Title", required: true %>
  <%= form.text_area :body, placeholder: "Description", required: true %>
  <%= form.text_field :link, placeholder: "Link to Demo" %>
  <%= form.text_field :repo, placeholder: "Link to Repo" %>
  <%= form.text_field :tag_list, placeholder: "Tags" %>
<% end %>

<%= post_form_for(MeetingPost) do |form| %>
  <%= react_component("MeetingPost", props: @post, prerender: true) %>
  <%= form.text_field :title, placeholder: "Title", required: true %>
  <%= form.text_area :body, placeholder: "Description", required: true %>
  <%= form.datetime_field :date %>
  <%= form.text_field :tag_list, placeholder: "Tags" %>
<% end %>

<%= post_form_for(JobPost) do |form| %>
  <%#= react_component("TextPost", props: @post, prerender: true) %>
  <%= form.text_field :title, placeholder: "Title", required: true %>
  <%= form.text_area :body, placeholder: "Description", required: true %>
  <%= form.text_field :link, placeholder: "Link to Job Website", required: true %>
  <%= form.number_field :salary, placeholder: "Salary" %>
  <%= form.text_field :location, placeholder: "Location" %>
  <%= form.text_field :tag_list, placeholder: "Tags" %>
<% end %>

<%= post_form_for(PicPost) do |form| %>
  <%= react_component("PicPost", props: @post, prerender: true) %>
  <%#= form.file_field :image, required: true %>
<% end %>

<%= render @dashboard.timeline %>
